{
    "env": {
        "es6": true,
        "browser": true,
        "amd": true
    },
    "globals": {
        "Phaser": true,
        "requirejs": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": "off",
        "quotes": [
            "off"
        ],
        "semi": [
            "warn",
            "always"
        ]
    }
}